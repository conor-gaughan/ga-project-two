<%- include('../partials/header') %>

<section>
<form action="/todos" method="post">
    <label for="title">Add Task</label>
    <input type="text" name="title" id="">
    <button type="submit">Enter Task</button>
</form>
</section>
<section>
<ul>
<% todos.forEach(todo => { %>
    <li><%= todo.title %></li> <a href="/todos">
    <a href="/todos/<%= todo._id %>">Details</a>
<% }) %>
</ul>

<ul>
    <% todos.forEach(function(todo, id) { %>
        <li>
            <form class="delete-form" action="/todos/<%= todo._id %>?_method=DELETE" method="POST">
                <a href="/todos/<%= todo._id %>"><button type="submit">X</button></a>
            </form>

        </li>
    <% }) %>
</ul>

</section>
<a href="/">back home</a>

